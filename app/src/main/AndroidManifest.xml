<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.btl.bookingroom">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
        android:usesCleartextTraffic="true">
        <activity android:name="com.btl.bookingroom.activity.HistoryActivity"></activity>
        <activity android:name="com.btl.bookingroom.activity.ConfirmForgotActivity" />
        <activity android:name="com.btl.bookingroom.activity.ForgotPasswordActivity" />
        <activity android:name="com.btl.bookingroom.activity.BookRoomActivity" />
        <activity android:name="com.btl.bookingroom.activity.CheckGmailActivity" />
        <activity android:name="com.btl.bookingroom.activity.InfoHotelActivity" />
        <activity android:name="com.btl.bookingroom.activity.ChangePasswordActivity" />
        <activity android:name="com.btl.bookingroom.activity.InfoCustomerActivity" />
        <activity android:name="com.btl.bookingroom.activity.CustomerActivity" />
        <activity android:name="com.btl.bookingroom.activity.CreatedUserActivity" />
        <activity android:name="com.btl.bookingroom.activity.LoginActivity" />
        <activity android:name="com.btl.bookingroom.activity.ThemeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <queries>
        <intent>
                <action android:name="com.huawei.hms.core.aidlservice" />
        </intent>
    </queries>

</manifest>